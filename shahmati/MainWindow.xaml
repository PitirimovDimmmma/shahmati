<Window x:Class="shahmati.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shahmati"
        mc:Ignorable="d"
        Title="Шахматный тренажер - Игра" 
        Height="806" Width="1100"  
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Стиль для клеток доски -->
        <Style x:Key="BoardCellStyle" TargetType="Border">
            <Setter Property="Background" Value="{Binding BackgroundColor}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPossibleMove}" Value="True">
                    <Setter Property="Background" Value="#9060EE60"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для карточек -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Стиль для кнопок управления -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1C5A7D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с информацией пользователя -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация пользователя -->
                <Border Grid.Column="0" 
                       Background="Transparent" 
                       Cursor="Arrow">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="50" Height="50" Background="#ECF0F1" CornerRadius="25">
                            <Border.Clip>
                                <EllipseGeometry RadiusX="25" RadiusY="25" Center="25,25"/>
                            </Border.Clip>
                            <Image x:Name="UserAvatar" 
                                   Stretch="UniformToFill"/>
                        </Border>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="UserNameText" 
                                       Text="Гость" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="UserRatingText" 
                                       Text="Рейтинг: 1200" 
                                       Foreground="#BDC3C7" 
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Таймеры и рейтинг -->
                <StackPanel Grid.Column="1" 
                           HorizontalAlignment="Center" 
                           Orientation="Horizontal">

                    <!-- Таймер белых -->
                    <Border Style="{StaticResource InfoCardStyle}" 
                           Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="БЕЛЫЕ" 
                                      Foreground="#BDC3C7" 
                                      FontSize="10"/>
                            <TextBlock x:Name="WhiteTimerText" 
                                      Text="05:00" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Таймер черных -->
                    <Border Style="{StaticResource InfoCardStyle}" 
                           Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="ЧЕРНЫЕ" 
                                      Foreground="#BDC3C7" 
                                      FontSize="10"/>
                            <TextBlock x:Name="BlackTimerText" 
                                      Text="05:00" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Рейтинг -->
                    <Border Style="{StaticResource InfoCardStyle}" 
                           Background="#27AE60">
                        <StackPanel>
                            <TextBlock Text="РЕЙТИНГ" 
                                      Foreground="#BDC3C7" 
                                      FontSize="10"/>
                            <TextBlock x:Name="RatingText" 
                                      Text="1200" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Кнопки управления -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">

                    <!-- Кнопка подсветки -->
                    <ToggleButton x:Name="HighlightMovesToggle"
                                 Content="🔦 Подсветка"
                                 Background="#3498DB"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="12,8"
                                 Margin="0,0,10,0"
                                 FontSize="12"
                                 FontWeight="Bold"
                                 IsChecked="True"
                                 Checked="HighlightMovesToggle_Checked"
                                 Unchecked="HighlightMovesToggle_Unchecked"/>

                    <!-- Кнопка завершения -->
                    <Button x:Name="FinishButton" 
                           Content="🏁 Завершить" 
                           Background="#E74C3C"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="12,8"
                           FontSize="12"
                           FontWeight="Bold"
                           Click="FinishButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Шахматная доска с буквами и цифрами -->
            <Viewbox Grid.Column="0" Stretch="Uniform" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="#2C2C2C" CornerRadius="5" BorderBrush="#2C2C2C" BorderThickness="3" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="480"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="480"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>

                        <!-- САМА ДОСКА С КЛЕТКАМИ -->
                        <Border Grid.Row="1" Grid.Column="1" Background="#2C2C2C">
                            <ItemsControl ItemsSource="{Binding Board.CellsFlat}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="8" Columns="8"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="60" Height="60" 
                                               BorderBrush="Transparent" BorderThickness="0"
                                               Style="{StaticResource BoardCellStyle}">

                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                             Command="{Binding DataContext.CellClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                             CommandParameter="{Binding Position}"/>
                                            </Border.InputBindings>

                                            <Image Source="{Binding Piece.ImagePath}" 
                                                   Width="45" Height="45"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- ЦИФРЫ СЛЕВА (8-1) -->
                        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="569" Width="15">
                            <TextBlock Text="8" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="7" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="6" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="5" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="4" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="3" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="2" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="1" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial"/>
                        </StackPanel>

                        <!-- ЦИФРЫ СПРАВА (8-1) -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="8" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="7" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="6" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="5" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="4" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="3" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="2" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,0,55"/>
                            <TextBlock Text="1" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial"/>
                        </StackPanel>

                        <!-- БУКВЫ СВЕРХУ (a-h) -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="a" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="25,0,55,0"/>
                            <TextBlock Text="b" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="c" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="d" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="e" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="f" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="g" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="h" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial"/>
                        </StackPanel>

                        <!-- БУКВЫ СНИЗУ (a-h) -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="a" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="25,0,55,0"/>
                            <TextBlock Text="b" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="c" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="d" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="e" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="f" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="g" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial" Margin="0,0,55,0"/>
                            <TextBlock Text="h" Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="14" FontFamily="Arial"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Viewbox>

            <!-- Панель управления справа -->
            <Border Grid.Column="1" 
                   Background="#F5F5DC" 
                   Margin="10" 
                   CornerRadius="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">

                        <!-- Выбор режима игры -->
                        <TextBlock Text="НАСТРОЙКИ ИГРЫ" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,15" 
                                  Foreground="#8B4513"/>

                        <!-- Режим игры -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Режим:" 
                                      FontWeight="Bold" 
                                      Margin="0,0,0,5" 
                                      Foreground="#333"/>
                            <ComboBox x:Name="GameModeComboBox"
                                     SelectedIndex="0"
                                     Height="35"
                                     FontSize="12"
                                     SelectionChanged="GameModeComboBox_SelectionChanged">
                                <ComboBoxItem>Человек vs Человек</ComboBoxItem>
                                <ComboBoxItem>Человек vs ИИ</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!-- Сложность ИИ -->
                        <StackPanel x:Name="AIDifficultyPanel" 
                                   Margin="0,0,0,15"
                                   Visibility="Collapsed">
                            <TextBlock Text="Сложность ИИ:" 
                                      FontWeight="Bold" 
                                      Margin="0,0,0,5" 
                                      Foreground="#333"/>
                            <ComboBox x:Name="DifficultyComboBox"
                                     SelectedIndex="2"
                                     Height="35"
                                     FontSize="12"
                                     SelectionChanged="DifficultyComboBox_SelectionChanged">
                                <ComboBoxItem>Новичок (без времени)</ComboBoxItem>
                                <ComboBoxItem>Лёгкий (10 мин)</ComboBoxItem>
                                <ComboBoxItem>Средний (5 мин)</ComboBoxItem>
                                <ComboBoxItem>Сложный (3 мин)</ComboBoxItem>
                                <ComboBoxItem>Эксперт (1 мин)</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!-- Текущий игрок -->
                        <Border Background="#8B4513" 
                               Padding="12" 
                               Margin="0,0,0,20" 
                               CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="СЕЙЧАС ХОДИТ:" 
                                          FontSize="11" 
                                          Foreground="#E0E0E0" 
                                          HorizontalAlignment="Center"/>
                                <TextBlock x:Name="CurrentPlayerText" 
                                          Text="БЕЛЫЕ" 
                                          FontSize="18" 
                                          FontWeight="Bold" 
                                          Foreground="White" 
                                          HorizontalAlignment="Center"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Индикатор хода ИИ -->
                        <Border x:Name="AITurnIndicator"
                               Background="#FF6B6B" 
                               Padding="10" 
                               Margin="0,0,0,20" 
                               CornerRadius="8" 
                               Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <TextBlock Text="🤖" 
                                          FontSize="16" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="ИИ думает..." 
                                          Foreground="White" 
                                          FontWeight="Bold" 
                                          FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- История ходов -->
                        <TextBlock Text="ИСТОРИЯ ХОДОВ" 
                                  FontSize="13" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  Margin="0,0,0,8"/>

                        <Border Background="White"
                               BorderThickness="1"
                               BorderBrush="#BDC3C7"
                               CornerRadius="5"
                               Margin="0,0,0,20">
                            <ListBox x:Name="MoveHistoryList" 
                                    Height="150" 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                  FontSize="11"
                                                  Margin="8,4"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Кнопки управления игрой -->
                        <StackPanel Margin="0,0,0,20">
                            <Button x:Name="NewGameButton" 
                                   Content="♛ НОВАЯ ИГРА" 
                                   Height="42"
                                   Style="{StaticResource ControlButtonStyle}"
                                   Background="#27AE60"
                                   FontSize="13"
                                   Click="NewGameButton_Click"/>

                            <Button x:Name="RestartButton" 
                                   Content="🔄 НАЧАТЬ ЗАНОВО" 
                                   Height="38"
                                   Style="{StaticResource ControlButtonStyle}"
                                   Background="#3498DB"
                                   Margin="0,10,0,0"
                                   Click="RestartButton_Click"/>

                            <Button x:Name="HomeButton" 
                                   Content="🏠 НА ГЛАВНУЮ" 
                                   Height="38"
                                   Style="{StaticResource ControlButtonStyle}"
                                   Background="#9B59B6"
                                   Margin="0,10,0,0"
                                   Click="HomeButton_Click"/>
                        </StackPanel>

                        <!-- Статистика игры -->
                        <Border Background="#ECF0F1" 
                               Padding="12" 
                               CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="СТАТИСТИКА ИГРЫ" 
                                          FontSize="12" 
                                          FontWeight="Bold"
                                          Foreground="#7F8C8D"
                                          Margin="0,0,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Ходов:" 
                                                  FontSize="11" 
                                                  Foreground="#333"/>
                                        <TextBlock x:Name="MovesCountText" 
                                                  Text="0" 
                                                  FontSize="18" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Время:" 
                                                  FontSize="11" 
                                                  Foreground="#333"/>
                                        <TextBlock x:Name="GameTimeText" 
                                                  Text="00:00" 
                                                  FontSize="18" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Футер со статусом -->
        <Border Grid.Row="2" 
               Background="#34495E" 
               Padding="12">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock x:Name="StatusIcon" 
                          Text="♜" 
                          Foreground="White" 
                          FontSize="14"
                          Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText" 
                          Text="Игра начата. Делайте ходы на доске." 
                          Foreground="#BDC3C7" 
                          FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>