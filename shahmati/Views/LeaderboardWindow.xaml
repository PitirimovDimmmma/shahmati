<Window x:Class="shahmati.Views.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Таблица лидеров" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50">

    <Window.Resources>
        <Style x:Key="RankStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="← Назад" 
                       Click="BackButton_Click"
                       Background="Transparent" 
                       Foreground="White"
                       BorderThickness="0"/>

                <TextBlock Grid.Column="1" Text="🏆 Таблица лидеров" 
                          Foreground="White" FontSize="24" FontWeight="Bold"
                          HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="UserRankText" Text="" 
                              Foreground="#BDC3C7" FontSize="14"
                              Margin="0,0,10,0"/>
                    <Button Content="Обновить" Click="RefreshButton_Click"
                           Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица -->
        <DataGrid Grid.Row="1" x:Name="LeaderboardGrid"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 HeadersVisibility="Column"
                 Margin="20"
                 Background="White"
                 BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ранг" Width="60" Binding="{Binding Rank}"/>
                <DataGridTextColumn Header="Игрок" Width="150" Binding="{Binding Username}"/>
                <DataGridTextColumn Header="Рейтинг" Width="80" Binding="{Binding Rating}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#3498db"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Игр" Width="60" Binding="{Binding GamesPlayed}"/>
                <DataGridTextColumn Header="Победы" Width="70" Binding="{Binding Wins}"/>
                <DataGridTextColumn Header="Поражения" Width="80" Binding="{Binding Losses}"/>
                <DataGridTextColumn Header="Ничьи" Width="60" Binding="{Binding Draws}"/>
                <DataGridTextColumn Header="% побед" Width="80" 
                                   Binding="{Binding WinRate, StringFormat={}{0:F1}%}"/>
                <DataGridTextColumn Header="Титул" Width="120" Binding="{Binding RankTitle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock Text="Обновлено: " x:Name="LastUpdateText"
                      Foreground="#BDC3C7" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>