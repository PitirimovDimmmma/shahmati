<Window x:Class="shahmati.Views.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Таблица лидеров" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50">

    <Window.Resources>
        <Style x:Key="RankStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- Стиль для обычных кнопок -->
        <Style x:Key="SimpleButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1C5A7D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button Grid.Column="0" Content="← Назад" 
                       Click="BackButton_Click"
                       Style="{StaticResource SimpleButton}"/>

                <!-- Заголовок -->
                <TextBlock Grid.Column="1" Text="🏆 Таблица лидеров" 
                          Foreground="White" FontSize="24" FontWeight="Bold"
                          HorizontalAlignment="Center"/>

                <!-- Правая часть -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="UserRankText" Text="" 
                              Foreground="#BDC3C7" FontSize="14"
                              Margin="0,0,10,0"
                              VerticalAlignment="Center"/>
                    <Button Content="🔄 Обновить" 
                           Click="RefreshButton_Click"
                           Style="{StaticResource SimpleButton}"
                           Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица -->
        <DataGrid Grid.Row="1" x:Name="LeaderboardGrid"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 HeadersVisibility="Column"
                 Margin="20"
                 Background="White"
                 BorderBrush="#BDC3C7"
                 BorderThickness="1"
                 RowBackground="#F8F9FA"
                 AlternatingRowBackground="#ECF0F1"
                 GridLinesVisibility="None"
                 CanUserResizeRows="False"
                 CanUserSortColumns="True"
                 SelectionMode="Single">

            <!-- Стиль для заголовков столбцов -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="#2C3E50"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <!-- Ранг -->
                <DataGridTextColumn Header="Ранг" Width="60" Binding="{Binding Rank}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="#2C3E50"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Игрок -->
                <DataGridTextColumn Header="Игрок" Width="180" Binding="{Binding Username}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Рейтинг -->
                <DataGridTextColumn Header="Рейтинг" Width="90" Binding="{Binding Rating}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#3498db"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Игр -->
                <DataGridTextColumn Header="Игр" Width="60" Binding="{Binding GamesPlayed}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#7F8C8D"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Победы -->
                <DataGridTextColumn Header="Победы" Width="70" Binding="{Binding Wins}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#27AE60"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

               

               

                <!-- % побед -->
                <DataGridTextColumn Header="% побед" Width="80" 
                                   Binding="{Binding WinRate, StringFormat={}{0:F1}%}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#9B59B6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

              
            </DataGrid.Columns>
        </DataGrid>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock x:Name="LastUpdateText" Text="Обновлено: " 
                      Foreground="#BDC3C7" 
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>