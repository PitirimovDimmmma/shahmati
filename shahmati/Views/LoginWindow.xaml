<Window x:Class="shahmati.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шахматный тренажёр - Вход" 
        Height="512" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordFieldStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки регистрации БЕЗ ОБВОДКИ -->
        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2C3E50" Offset="0"/>
            <GradientStop Color="#4CA1AF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
            <TextBlock Text="♛" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Шахматный тренажёр" 
                      FontSize="22" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"
                      Margin="0,10,0,0"/>
            <TextBlock Text="Войдите в свой аккаунт" 
                      FontSize="14" Foreground="#E0E0E0" 
                      HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Форма входа -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="30,0,30,0">
            <Border Background="#FFFFFF" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Логин" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                    <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputFieldStyle}"/>

                    <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#333"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordFieldStyle}"/>

                    <Button Content="Войти" 
                           Style="{StaticResource LoginButtonStyle}"
                           Margin="0,25,0,0" Click="LoginButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Кнопка регистрации БЕЗ ОБВОДКИ -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Нет аккаунта?" Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Button Content="Зарегистрироваться" 
                       Style="{StaticResource RegisterButtonStyle}"
                       FontSize="12" FontWeight="Bold"
                       Padding="10,0"
                       Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>