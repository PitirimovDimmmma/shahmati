<Window x:Class="shahmati.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История игр" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50">

    <Window.Resources>
        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="FindGamesButton" Content="🔍 Найти мои игры" 
        Click="FindGamesButton_Click" Margin="96,5,383,5" Padding="10,5" 
        Background="#3498db" Foreground="White" Grid.ColumnSpan="2"/>
                <Button Grid.Column="0" Content="← Назад" 
                       Click="BackButton_Click"
                       Background="Transparent" 
                       Foreground="White"
                       BorderThickness="0" Grid.ColumnSpan="2" Margin="23,10,520,5"/>

                <TextBlock Grid.Column="1" Text="📊 История игр" 
                          Foreground="White" FontSize="20" FontWeight="Bold"
                          HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="TotalGamesText" Text="Всего игр: 0" 
                              Foreground="#BDC3C7" FontSize="12"
                              Margin="0,0,10,0"/>
                    <Button Content="Обновить" Click="RefreshButton_Click"
                           Background="#3498DB" Foreground="White"
                           Padding="10,5" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список игр -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" x:Name="GamesContainer" Height="404">
                <!-- Игры будут добавляться динамически -->
            </StackPanel>
        </ScrollViewer>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock Text="История ваших шахматных партий" 
                      Foreground="#BDC3C7" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>