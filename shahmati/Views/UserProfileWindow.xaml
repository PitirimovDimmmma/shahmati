<Window x:Class="shahmati.Views.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мой профиль" 
        Height="751" Width="500"  
    WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2C3E50">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <Style x:Key="AdminButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#9B59B6"/>
            <!-- Фиолетовый для админ-кнопок -->
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="👤" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Мой профиль" 
                              FontSize="24" FontWeight="Bold" 
                              Foreground="White" HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Карточка профиля -->
                <Border Background="#FFFFFF" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Аватар -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Border Width="120" Height="120" 
                                   Background="#F0F0F0" 
                                   BorderBrush="#CCCCCC" BorderThickness="3"
                                   CornerRadius="60">
                                <Border.Clip>
                                    <EllipseGeometry RadiusX="60" RadiusY="60" Center="60,60"/>
                                </Border.Clip>
                                <Image x:Name="ProfileAvatarImage" Stretch="UniformToFill"/>
                            </Border>
                            <Button x:Name="ChangeAvatarButton" 
                                   Content="Изменить фото" 
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Width="120" Margin="0,10,0,0"
                                   Click="ChangeAvatarButton_Click"/>
                        </StackPanel>

                        <!-- Информация о пользователе -->
                        <Grid Margin="0,20,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Никнейм -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="Никнейм:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,10,10"/>
                            <TextBox x:Name="NicknameTextBox" 
                                    Grid.Row="0" Grid.Column="1"
                                    Style="{StaticResource InputFieldStyle}"
                                    TextChanged="NicknameTextBox_TextChanged"/>

                            <!-- Email -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Email:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,10,10"/>
                            <TextBlock x:Name="EmailText" 
                                      Grid.Row="1" Grid.Column="1"
                                      Text="email@example.com"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,10"/>

                            <!-- Роль -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Роль:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,10,10"/>
                            <TextBlock x:Name="RoleText" 
                                      Grid.Row="2" Grid.Column="1"
                                      Text="Пользователь"
                                      FontWeight="Bold"
                                      Foreground="#9B59B6"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,10"/>

                            <!-- Рейтинг -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                      Text="Рейтинг:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,10,10"/>
                            <TextBlock x:Name="RatingText" 
                                      Grid.Row="3" Grid.Column="1"
                                      Text="0"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#27AE60"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,10"/>

                            <!-- Дата регистрации -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                      Text="Регистрация:" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,10,10"/>
                            <TextBlock x:Name="RegistrationDateText" 
                                      Grid.Row="4" Grid.Column="1"
                                      Text="01.01.2024"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,10"/>
                        </Grid>

                        <!-- Кнопки действий -->
                        <StackPanel Margin="0,30,0,0">
                            <Button x:Name="SaveButton" 
                                   Content="💾 Сохранить изменения" 
                                   Style="{StaticResource SuccessButtonStyle}"
                                   Click="SaveButton_Click"
                                   IsEnabled="False"/>

                            <Button x:Name="ChangePasswordButton" 
                                   Content="🔒 Сменить пароль" 
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Margin="0,10,0,0"
                                   Click="ChangePasswordButton_Click"/>

                            <Button x:Name="DeleteAccountButton" 
                                   Content="🗑️ Удалить аккаунт" 
                                   Style="{StaticResource DangerButtonStyle}"
                                   Margin="0,10,0,0"
                                   Click="DeleteAccountButton_Click"/>
                        </StackPanel>

                        <!-- Административная секция (только для админов) -->
                        <Border x:Name="AdminSection" 
                               BorderBrush="#9B59B6" 
                               BorderThickness="2" 
                               CornerRadius="8" 
                               Padding="15" 
                               Margin="0,30,0,0"
                               Background="#F5F0FA"
                               Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="⚙️" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Администратор" 
                                              FontSize="16" 
                                              FontWeight="Bold"
                                              Foreground="#9B59B6"/>
                                </StackPanel>

                                <Button x:Name="AdminPanelButton" 
                                       Content="Панель управления" 
                                       Style="{StaticResource AdminButtonStyle}"
                                       Click="AdminPanelButton_Click"
                                       Margin="0,0,0,10"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>