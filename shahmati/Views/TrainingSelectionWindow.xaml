<Window x:Class="shahmati.Views.TrainingSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shahmati.Views"
        xmlns:converters="clr-namespace:shahmati.Converters"
        mc:Ignorable="d"
        Title="🔥 ВЫБОР ТРЕНИРОВКИ" 
        Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50"
        BorderThickness="1"
        BorderBrush="#FF6A00"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
Closing="Window_Closing">

    <Window.Resources>
        <!-- Конвертеры -->


        <!-- Стиль для прямоугольных карточек тренировок -->
        <Style x:Key="HorizontalTrainingCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#34495E" Offset="0"/>
                        <GradientStop Color="#2C3E50" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Width" Value="450"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#4A6572"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF6A00"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#3C4E60" Offset="0"/>
                                <GradientStop Color="#2C3843" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для фильтров -->
        <Style x:Key="FilterPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#4A6572"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Стиль для заголовков фильтров -->
        <Style x:Key="FilterHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Стиль для тегов сложности -->
        <Style x:Key="DifficultyTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Difficulty}" Value="Beginner">
                    <Setter Property="Background" Value="#27AE60"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Difficulty}" Value="Medium">
                    <Setter Property="Background" Value="#3498DB"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Difficulty}" Value="Hard">
                    <Setter Property="Background" Value="#E74C3C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Difficulty}" Value="Expert">
                    <Setter Property="Background" Value="#9B59B6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для тегов категории -->
        <Style x:Key="CategoryTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#8E44AD"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <!-- Стиль для кнопок управления -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1C5A7D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки назад -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF6A00"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FFD700"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="20"
                BorderBrush="#4A6572"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- КНОПКА НАЗАД -->
                <Button Grid.Column="0" 
                       Content="← НАЗАД" 
                       Style="{StaticResource BackButtonStyle}"
                       Click="BackButton_Click"/>

                <!-- ЗАГОЛОВОК -->
                <StackPanel Grid.Column="1" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock Text="🏋️ ВЫБОР ТРЕНИРОВКИ" 
                              Foreground="#FFD700" 
                              FontSize="24" 
                              FontWeight="Bold"
                              FontFamily="Segoe UI Black"/>
                    <TextBlock Text="Выберите тренировку для улучшения навыков" 
                              Foreground="#BDC3C7" 
                              FontSize="12"
                              FontWeight="SemiBold"/>
                </StackPanel>

                <!-- СТАТИСТИКА -->
                <Button Grid.Column="2" 
                       Content="📊 СТАТИСТИКА" 
                       Style="{StaticResource ControlButtonStyle}"
                       Background="#9B59B6"
                       Click="StatsButton_Click"/>
            </Grid>
        </Border>

        <!-- ОСНОВНАЯ ОБЛАСТЬ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ПАНЕЛЬ ФИЛЬТРОВ -->
            <Border Grid.Column="0" 
                   Background="#34495E" 
                   Margin="0,0,1,0"
                   BorderBrush="#4A6572"
                   BorderThickness="0,1,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>

                        <!-- ПОИСК -->
                        <Border Style="{StaticResource FilterPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="🔍 ПОИСК ТРЕНИРОВКИ" 
                                          Style="{StaticResource FilterHeaderStyle}"/>
                                <TextBox x:Name="SearchTextBox" 
                                        Background="#2C3E50"
                                        Foreground="White"
                                        BorderBrush="#4A6572"
                                        BorderThickness="1"
                                        Padding="10,8"
                                        FontSize="12"
                                        TextChanged="SearchTextBox_TextChanged">
                                    <TextBox.Effect>
                                        <DropShadowEffect BlurRadius="5" Opacity="0.1" ShadowDepth="2"/>
                                    </TextBox.Effect>
                                </TextBox>
                            </StackPanel>
                        </Border>

                        <!-- КАТЕГОРИИ -->
                        <Border Style="{StaticResource FilterPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="📂 КАТЕГОРИИ" 
                                          Style="{StaticResource FilterHeaderStyle}"/>
                                <RadioButton x:Name="AllCategoryRadio" 
                                           Content="Все категории" 
                                           GroupName="Category"
                                           Foreground="White"
                                           FontSize="12"
                                           Margin="0,0,0,5"
                                           IsChecked="True"
                                           Checked="CategoryRadio_Checked"/>
                                <RadioButton x:Name="TacticsCategoryRadio" 
                                           Content="Тактика" 
                                           GroupName="Category"
                                           Foreground="White"
                                           FontSize="12"
                                           Margin="0,0,0,5"
                                           Checked="CategoryRadio_Checked"/>
                                <RadioButton x:Name="OpeningCategoryRadio" 
                                           Content="Дебюты" 
                                           GroupName="Category"
                                           Foreground="White"
                                           FontSize="12"
                                           Margin="0,0,0,5"
                                           Checked="CategoryRadio_Checked"/>
                                <RadioButton x:Name="EndgameCategoryRadio" 
                                           Content="Эндшпиль" 
                                           GroupName="Category"
                                           Foreground="White"
                                           FontSize="12"
                                           Margin="0,0,0,5"
                                           Checked="CategoryRadio_Checked"/>
                                <RadioButton x:Name="StrategyCategoryRadio" 
                                           Content="Стратегия" 
                                           GroupName="Category"
                                           Foreground="White"
                                           FontSize="12"
                                           Checked="CategoryRadio_Checked"/>
                            </StackPanel>
                        </Border>

                        <!-- СЛОЖНОСТЬ -->
                        <Border Style="{StaticResource FilterPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="⚡ СЛОЖНОСТЬ" 
                                          Style="{StaticResource FilterHeaderStyle}"/>
                                <CheckBox x:Name="BeginnerCheckBox" 
                                        Content="Новичок" 
                                        Foreground="White"
                                        FontSize="12"
                                        Margin="0,0,0,5"
                                        IsChecked="True"
                                        Checked="DifficultyCheckBox_Checked"
                                        Unchecked="DifficultyCheckBox_Checked"/>
                                <CheckBox x:Name="MediumCheckBox" 
                                        Content="Средний" 
                                        Foreground="White"
                                        FontSize="12"
                                        Margin="0,0,0,5"
                                        IsChecked="True"
                                        Checked="DifficultyCheckBox_Checked"
                                        Unchecked="DifficultyCheckBox_Checked"/>
                                <CheckBox x:Name="HardCheckBox" 
                                        Content="Сложный" 
                                        Foreground="White"
                                        FontSize="12"
                                        Margin="0,0,0,5"
                                        IsChecked="True"
                                        Checked="DifficultyCheckBox_Checked"
                                        Unchecked="DifficultyCheckBox_Checked"/>
                                <CheckBox x:Name="ExpertCheckBox" 
                                        Content="Эксперт" 
                                        Foreground="White"
                                        FontSize="12"
                                        IsChecked="True"
                                        Checked="DifficultyCheckBox_Checked"
                                        Unchecked="DifficultyCheckBox_Checked"/>
                            </StackPanel>
                        </Border>

                        <!-- КНОПКИ УПРАВЛЕНИЯ -->
                        <StackPanel Margin="0,10,0,0">
                            <Button Content="🔄 СБРОСИТЬ ФИЛЬТРЫ" 
                                   Style="{StaticResource ControlButtonStyle}"
                                   Background="#E74C3C"
                                   Height="35"
                                   Click="ResetFiltersButton_Click"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- СПИСОК ТРЕНИРОВОК -->
            <ScrollViewer Grid.Column="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="20">

                <!-- Если есть тренировки -->
                <ItemsControl x:Name="TrainingsList" 
                            ItemsSource="{Binding FilteredTrainings}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource HorizontalTrainingCardStyle}"
                                   MouseDown="TrainingCard_MouseDown"
                                   Tag="{Binding Id}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- ИКОНКА -->
                                    <Border Grid.Column="0" 
                                           Width="50" 
                                           Height="50" 
                                           CornerRadius="8"
                                           Background="#3498DB"
                                           VerticalAlignment="Center">
                                        <TextBlock Text="♔" 
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="White"/>
                                    </Border>

                                    <!-- ОСНОВНАЯ ИНФОРМАЦИЯ -->
                                    <StackPanel Grid.Column="1" 
                                               Margin="15,0"
                                               VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontSize="16" 
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="12"
                                                  Foreground="#BDC3C7"
                                                  TextWrapping="Wrap"
                                                  Margin="0,5,0,0"/>

                                        <!-- ТЕГИ -->
                                        <WrapPanel Margin="0,8,0,0">
                                            <Border Style="{StaticResource DifficultyTagStyle}">
                                                <TextBlock Text="{Binding Difficulty}" 
                                                          Foreground="White"
                                                          FontSize="10"
                                                          FontWeight="Bold"/>
                                            </Border>

                                            <Border Style="{StaticResource CategoryTagStyle}">
                                                <TextBlock Text="{Binding Category}" 
                                                          Foreground="White"
                                                          FontSize="10"
                                                          FontWeight="Bold"/>
                                            </Border>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- ИНФОРМАЦИЯ СПРАВА -->
                                    <StackPanel Grid.Column="2" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" 
                                                   Margin="0,0,0,10">
                                            <TextBlock Text="⏱️"
                                                      FontSize="14"
                                                      Foreground="#FFD700"
                                                      Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding MaxTime, StringFormat={}{0} сек}" 
                                                      FontSize="11"
                                                      Foreground="#BDC3C7"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="♟️"
                                                      FontSize="14"
                                                      Foreground="#FFD700"
                                                      Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding MaxMoves, StringFormat={}{0} ходов}" 
                                                      FontSize="11"
                                                      Foreground="#BDC3C7"/>
                                        </StackPanel>

                                        <!-- СТАТУС -->
                                        <Border Background="#27AE60" 
                                               CornerRadius="8" 
                                               Padding="6,3"
                                               Margin="0,10,0,0">
                                            <TextBlock Text="✓ Пройдено" 
                                                      Foreground="White"
                                                      FontSize="10"
                                                      FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Grid>

        <!-- ФУТЕР -->
        <Border Grid.Row="2" 
               Background="#34495E" 
               Padding="12"
               BorderBrush="#4A6572"
               BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- СТАТУС -->
                <TextBlock Grid.Column="0" 
                          Text="🎯 Выберите тренировку кликом мыши" 
                          Foreground="#BDC3C7" 
                          FontSize="11"
                          HorizontalAlignment="Center"/>

                <!-- КОЛИЧЕСТВО -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <TextBlock Text="Найдено: " 
                              Foreground="#BDC3C7" 
                              FontSize="11"/>
                    <TextBlock Text="0" 
                              Foreground="#FFD700" 
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>