<Window x:Class="shahmati.Views.TrainingSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор тренировки" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50">

    <Window.Resources>
        <!-- Стиль для карточек тренировок -->
        <Style x:Key="TrainingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Opacity="0.2" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для меток сложности -->
        <Style x:Key="DifficultyLabelStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#34495E" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Навигация -->
                <Button Grid.Column="0" Content="← Назад" 
                       Background="Transparent" 
                       Foreground="White" 
                       BorderThickness="0"
                       Click="BackButton_Click"
                       FontSize="12"/>

                <!-- Заголовок -->
                <TextBlock Grid.Column="1" Text="🏋️ ШАХМАТНЫЕ ТРЕНИРОВКИ" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>

                <!-- Статистика -->
                <Button Grid.Column="2" Content="📊 Статистика" 
                       Background="Transparent" 
                       Foreground="White" 
                       BorderThickness="0"
                       Click="StatsButton_Click"
                       FontSize="12"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель фильтров -->
            <Border Grid.Column="0" Background="#34495E" Margin="0,0,1,0">
                <StackPanel Margin="15">
                    <TextBlock Text="ФИЛЬТРЫ" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <!-- Поиск с плейсхолдером -->
                    <Border Height="30" Margin="0,0,0,15">
                        <Grid>
                            <TextBox x:Name="SearchTextBox" 
                                    Background="White"
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    Padding="10,5"
                                    FontSize="12"
                                    Foreground="#2C3E50"
                                    TextChanged="SearchTextBox_TextChanged"/>

                            <!-- Плейсхолдер поверх TextBox -->
                            <TextBlock x:Name="SearchPlaceholder"
                                      Text="Поиск тренировок..."
                                      Foreground="#95A5A6"
                                      FontSize="12"
                                      FontStyle="Italic"
                                      Padding="10,5"
                                      VerticalAlignment="Center"
                                      IsHitTestVisible="False"/>
                        </Grid>
                    </Border>

                    <!-- Категории -->
                    <TextBlock Text="КАТЕГОРИИ" 
                              Foreground="#BDC3C7" 
                              FontSize="11"
                              Margin="0,0,0,8"/>

                    <StackPanel>
                        <RadioButton x:Name="AllCategoryRadio" 
                                   Content="Все тренировки" 
                                   GroupName="Category"
                                   Foreground="White"
                                   IsChecked="True"
                                   Click="CategoryRadio_Click"/>
                        <RadioButton x:Name="TacticsCategoryRadio" 
                                   Content="Тактика" 
                                   GroupName="Category"
                                   Foreground="White"
                                   Click="CategoryRadio_Click"/>
                        <RadioButton x:Name="OpeningCategoryRadio" 
                                   Content="Дебюты" 
                                   GroupName="Category"
                                   Foreground="White"
                                   Click="CategoryRadio_Click"/>
                        <RadioButton x:Name="EndgameCategoryRadio" 
                                   Content="Эндшпиль" 
                                   GroupName="Category"
                                   Foreground="White"
                                   Click="CategoryRadio_Click"/>
                        <RadioButton x:Name="SpeedCategoryRadio" 
                                   Content="Скорость" 
                                   GroupName="Category"
                                   Foreground="White"
                                   Click="CategoryRadio_Click"/>
                        <RadioButton x:Name="SpecialCategoryRadio" 
                                   Content="Специальные" 
                                   GroupName="Category"
                                   Foreground="White"
                                   Click="CategoryRadio_Click"/>
                    </StackPanel>

                    <!-- Сложность -->
                    <TextBlock Text="СЛОЖНОСТЬ" 
                              Foreground="#BDC3C7" 
                              FontSize="11"
                              Margin="0,20,0,8"/>

                    <StackPanel>
                        <CheckBox x:Name="BeginnerCheckBox" 
                                Content="Новичок" 
                                Foreground="White"
                                IsChecked="True"/>
                        <CheckBox x:Name="MediumCheckBox" 
                                Content="Средний" 
                                Foreground="White"
                                IsChecked="True"/>
                        <CheckBox x:Name="HardCheckBox" 
                                Content="Сложный" 
                                Foreground="White"
                                IsChecked="True"/>
                    </StackPanel>

                    <!-- Кнопка сброса -->
                    <Button Content="Сбросить фильтры" 
                           Margin="0,20,0,0"
                           Height="30"
                           Background="#3498DB"
                           Foreground="White"
                           BorderThickness="0"
                           Click="ResetFiltersButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Список тренировок -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="TrainingsList" ItemsSource="{Binding FilteredTrainings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TrainingCardStyle}"
                                   MouseDown="TrainingCard_MouseDown"
                                   Tag="{Binding Id}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontSize="16" 
                                                  FontWeight="Bold"
                                                  Foreground="#2C3E50"/>

                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="12"
                                                  Foreground="#7F8C8D"
                                                  Margin="0,5,0,0"
                                                  TextWrapping="Wrap"/>

                                        <WrapPanel Margin="0,10,0,0">
                                            <!-- Простой цвет без конвертера -->
                                            <Border Style="{StaticResource DifficultyLabelStyle}" 
                                                   Background="#3498DB">
                                                <TextBlock Text="{Binding Difficulty}" 
                                                          Foreground="White"
                                                          FontSize="10"
                                                          FontWeight="Bold"/>
                                            </Border>

                                            <Border Style="{StaticResource DifficultyLabelStyle}" 
                                                   Background="#2ECC71"
                                                   Margin="5,0,0,0">
                                                <TextBlock Text="{Binding Category}" 
                                                          Foreground="White"
                                                          FontSize="10"
                                                          FontWeight="Bold"/>
                                            </Border>
                                        </WrapPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="⏱️"
                                                  FontSize="20"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding MaxTime, StringFormat={}{0} с}" 
                                                  FontSize="11"
                                                  Foreground="#7F8C8D"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock Text="Выберите тренировку и нажмите для начала" 
                      Foreground="#BDC3C7" 
                      HorizontalAlignment="Center" 
                      FontSize="11"/>
        </Border>
    </Grid>
</Window>