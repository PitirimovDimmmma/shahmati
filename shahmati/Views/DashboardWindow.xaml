<Window x:Class="shahmati.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шахматный тренажёр - Главная" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2C3E50">

    <Window.Resources>
        <!-- Стиль для карточек меню -->
        <Style x:Key="MenuCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для иконок -->
        <Style x:Key="IconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для заголовков карточек -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Стиль для описания -->
        <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с информацией пользователя -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Аватар и информация -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="60" Height="60" Background="#ECF0F1" CornerRadius="30">
                        <Border.Clip>
                            <EllipseGeometry RadiusX="30" RadiusY="30" Center="30,30"/>
                        </Border.Clip>
                        <Image x:Name="UserAvatarImage" Stretch="UniformToFill"/>
                    </Border>
                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="UserNameText" Text="Гость" 
                                  Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="UserRatingText" Text="Рейтинг: 1200" 
                                  Foreground="#BDC3C7" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопка выхода -->
                <Button Grid.Column="2" Content="Выйти" 
                       Background="Transparent" 
                       Foreground="#E74C3C" 
                       BorderThickness="0"
                       FontSize="12"
                       Click="LogoutButton_Click"
                       Padding="10,5"/>
            </Grid>
        </Border>

        <!-- Основное меню -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Шахматный тренажёр" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Первая строка меню -->
                <UniformGrid Columns="3" Margin="0,0,0,20">
                    <!-- Игра -->
                    <Border Style="{StaticResource MenuCardStyle}" 
                           MouseDown="GameCard_MouseDown">
                        <StackPanel>
                            <TextBlock Text="♟" Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="Игра" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Начать новую шахматную партию" 
                                      Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Тренировка -->
                    <Border Style="{StaticResource MenuCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🏋️" Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="Тренировка" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Упражнения для улучшения навыков" 
                                      Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Правила -->
                    <Border Style="{StaticResource MenuCardStyle}" 
                           MouseDown="RulesCard_MouseDown">
                        <StackPanel>
                            <TextBlock Text="📚" Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="Правила" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Изучить правила шахмат" 
                                      Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Вторая строка меню -->
                <UniformGrid Columns="3">
                    <!-- История игр -->
                    <Border Style="{StaticResource MenuCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📊" Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="История" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Просмотр истории ваших игр" 
                                      Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Рейтинг -->
                    <Border Style="{StaticResource MenuCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🏆" Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="Рейтинг" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Таблица лидеров и статистика" 
                                      Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Настройки -->
                    <Border Style="{StaticResource MenuCardStyle}">
                        <StackPanel>
                            <TextBlock Text="⚙️" Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="Настройки" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Настройки приложения и профиля" 
                                      Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <TextBlock Text="Шахматный тренажёр v1.0" 
                      Foreground="#BDC3C7" 
                      HorizontalAlignment="Center" 
                      FontSize="10"/>
        </Border>
    </Grid>
</Window>