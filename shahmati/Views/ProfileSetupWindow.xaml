<Window x:Class="shahmati.Views.ProfileSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка профиля" Height="612" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для кнопки сохранения -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="30">
        <StackPanel>
            <!-- Заголовок -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="♛" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Настройка профиля" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
                <TextBlock Text="Завершите настройку профиля" 
                          FontSize="14" Foreground="#E0E0E0" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Форма профиля -->
            <Border Background="#FFFFFF" CornerRadius="10" Padding="25">
                <StackPanel>
                    <!-- Аватар -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- Обрезаем изображение по кругу -->
                        <Border Width="100" Height="100" 
                               Background="#F0F0F0" 
                               BorderBrush="#CCCCCC" BorderThickness="2">
                            <Border.Clip>
                                <EllipseGeometry RadiusX="45" RadiusY="45" Center="50,50"/>
                            </Border.Clip>
                            <Image x:Name="AvatarImage" Stretch="UniformToFill" Margin="-6,-1,-6,0" RenderTransformOrigin="0.496,0.503"/>
                        </Border>
                        <Button Content="Выбрать фото" 
                               Height="30" Background="Transparent" 
                               Foreground="#667eea" FontSize="12" 
                               BorderThickness="0" Margin="0,10,0,0"
                               Cursor="Hand"
                               Click="SelectImageButton_Click"/>
                    </StackPanel>

                    <!-- Никнейм -->
                    <TextBlock Text="Никнейм" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                    <TextBox x:Name="NicknameTextBox" 
                            Style="{StaticResource InputFieldStyle}"
                            TextChanged="NicknameTextBox_TextChanged"/>
                    <TextBlock x:Name="NicknameError" Foreground="Red" FontSize="11" Visibility="Collapsed"/>

                    <!-- Кнопка сохранения -->
                    <Button x:Name="SaveButton" Content="Сохранить профиль" 
                           Style="{StaticResource SaveButtonStyle}"
                           Margin="0,25,0,10" 
                           IsEnabled="False"
                           Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>