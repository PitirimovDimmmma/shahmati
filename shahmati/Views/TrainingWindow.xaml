<Window x:Class="shahmati.Views.TrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shahmati.Views"
        xmlns:models="clr-namespace:shahmati.models"
        mc:Ignorable="d"
        Title="🎯 Шахматный Тренажер" 
        Height="800" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Градиенты для клеток -->
        <LinearGradientBrush x:Key="LightCellBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0D9B5" Offset="0"/>
            <GradientStop Color="#E8C8A0" Offset="0.5"/>
            <GradientStop Color="#E0B78B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DarkCellBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#B58863" Offset="0"/>
            <GradientStop Color="#A57853" Offset="0.5"/>
            <GradientStop Color="#956843" Offset="1"/>
        </LinearGradientBrush>

        <!-- Стиль для клеток доски -->
        <Style x:Key="BoardCellStyle" TargetType="Border">
            <Setter Property="Background" Value="{Binding BackgroundColor}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#90EE90" Offset="0"/>
                                <GradientStop Color="#32CD32" Offset="0.8"/>
                                <GradientStop Color="#228B22" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#00FF00"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPossibleMove}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#60EE9060" Offset="0"/>
                                <GradientStop Color="#4000FF00" Offset="0.7"/>
                                <GradientStop Color="#2000AA00" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#00FF00"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="CornerRadius" Value="35"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HasPiece}" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" 
                                             Color="#40000000" 
                                             BlurRadius="4" 
                                             Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для информационных карточек -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2C3E50" Offset="0"/>
                        <GradientStop Color="#34495E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#4A6572"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" 
                                     Color="#20000000" 
                                     BlurRadius="6" 
                                     Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для статистики -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A252F" Offset="0"/>
                        <GradientStop Color="#2C3E50" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#4A6572"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" 
                                     Color="#20000000" 
                                     BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок управления -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3498DB" Offset="0"/>
                        <GradientStop Color="#2980B9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2471A3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#5DADE2" Offset="0"/>
                                            <GradientStop Color="#3498DB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="3" 
                                                         Color="#40000000" 
                                                         BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#21618C" Offset="0"/>
                                            <GradientStop Color="#1B4F72" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для цветных кнопок -->
        <Style x:Key="GoldButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFD700" Offset="0"/>
                        <GradientStop Color="#D4AF37" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#B7950B"/>
        </Style>

        <!-- Стиль для прогресс бара -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4A6572"/>
            <Setter Property="Background" Value="#1A252F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <Grid x:Name="PART_Track">
                                <Rectangle x:Name="PART_Indicator" 
                                           HorizontalAlignment="Left">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#27AE60" Offset="0"/>
                                            <GradientStop Color="#2ECC71" Offset="0.5"/>
                                            <GradientStop Color="#27AE60" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- Стиль для текста заголовков -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Анимация пульсации для выделенной клетки -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.7" To="1.0" Duration="0:0:0.8"
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="#2C3E50" CornerRadius="10" BorderBrush="#4A6572" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ШАПКА -->
            <Border Grid.Row="0" 
                    Background="#34495E" 
                    Padding="20"
                    BorderBrush="#4A6572"
                    BorderThickness="0,0,0,2"
                    CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ИНФОРМАЦИЯ О ТРЕНИРОВКЕ -->
                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Border Width="50" 
                               Height="50" 
                               CornerRadius="10"
                               Background="#3498DB"
                               Margin="0,0,15,0">
                            <Viewbox>
                                <TextBlock Text="♔" 
                                          FontSize="30"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="White"
                                          FontWeight="Bold"/>
                            </Viewbox>
                        </Border>
                        <StackPanel>
                            <TextBlock x:Name="TrainingNameText" 
                                      Text="ШАХМАТНЫЙ ТРЕНАЖЕР" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,2"/>
                            <TextBlock x:Name="TrainingDescriptionText" 
                                      Text="Развивайте тактическое мышление и стратегию" 
                                      Foreground="#BDC3C7" 
                                      FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- СТАТИСТИКА -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,20,0">

                        <!-- ТАЙМЕР -->
                        <Border Style="{StaticResource StatCardStyle}" 
                               Margin="0,0,10,0" 
                               Width="120">
                            <StackPanel>
                                <TextBlock Text="⏱️ ВРЕМЯ" 
                                          FontSize="10" 
                                          Foreground="#BDC3C7"
                                          FontWeight="SemiBold"/>
                                <TextBlock x:Name="TimerText" 
                                          Text="00:00" 
                                          Foreground="#00FF00" 
                                          FontSize="22" 
                                          FontWeight="Bold"
                                          FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

       


                        <!-- ОШИБКИ -->
                        <Border Style="{StaticResource StatCardStyle}" 
                               Margin="0,0,10,0" 
                               Width="120">
                            <StackPanel>
                                <TextBlock Text="💀 ОШИБКИ" 
                                          FontSize="10" 
                                          Foreground="#BDC3C7"
                                          FontWeight="SemiBold"/>
                                <TextBlock x:Name="MistakesText" 
                                          Text="0" 
                                          Foreground="#E74C3C" 
                                          FontSize="22" 
                                          FontWeight="Bold"
                                          FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

                        <!-- ПРОГРЕСС -->
                        <Border Style="{StaticResource StatCardStyle}" 
                               Width="120">
                            <StackPanel>
                                <TextBlock Text="📊 ПРОГРЕСС" 
                                          FontSize="10" 
                                          Foreground="#BDC3C7"
                                          FontWeight="SemiBold"/>
                                <TextBlock x:Name="ProgressText" 
                                          Text="0/10" 
                                          Foreground="#3498DB" 
                                          FontSize="20" 
                                          FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- КНОПКИ УПРАВЛЕНИЯ -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Button x:Name="HintButton" 
                               Content="💡 ПОДСКАЗКА" 
                               Style="{StaticResource ControlButtonStyle}"
                               Background="#9B59B6"
                               Margin="0,0,10,0"
                               Click="HintButton_Click"/>

                        <Button x:Name="CompleteButton" 
                               Content="🏁 ЗАВЕРШИТЬ" 
                               Style="{StaticResource ControlButtonStyle}"
                               Background="#E74C3C"
                               Click="CompleteButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ОСНОВНАЯ ОБЛАСТЬ -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- ШАХМАТНАЯ ДОСКА -->
                <Viewbox Grid.Column="0" 
                        Stretch="Uniform" 
                        Margin="20" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                    <Border Background="#1A252F" 
                           CornerRadius="12" 
                           BorderBrush="#4A6572" 
                           BorderThickness="3" 
                           Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <!-- САМА ДОСКА С КЛЕТКАМИ -->
                            <Border Grid.Row="1" Grid.Column="1" 
                                   Background="Transparent"
                                   CornerRadius="8">
                                <ItemsControl ItemsSource="{Binding Board.CellsFlat}"
                                            x:Name="ChessBoard">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="8" Columns="8"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="70" Height="70" 
                                                   BorderBrush="Transparent" 
                                                   BorderThickness="0"
                                                   Style="{StaticResource BoardCellStyle}"
                                                   CornerRadius="3">

                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick" 
                                                                 Command="{Binding DataContext.CellClickCommand, 
                                                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                                                 CommandParameter="{Binding Position}"/>
                                                </Border.InputBindings>

                                                <Grid>
                                                    <Viewbox Stretch="Uniform" Margin="10">
                                                        <ContentControl>
                                                            <ContentControl.Style>
                                                                <Style TargetType="ContentControl">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Piece}" Value="{x:Null}">
                                                                            <Setter Property="Content">
                                                                                <Setter.Value>
                                                                                    <TextBlock Text=""/>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Piece}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Piece}" Value="{x:Null}">
                                                                            <Setter Property="Content">
                                                                                <Setter.Value>
                                                                                    <!-- Шахматные фигуры как Unicode символы -->
                                                                                    <TextBlock FontFamily="Segoe UI Symbol" 
                                                                                             FontSize="36"
                                                                                             Foreground="{Binding Piece.Color}"
                                                                                             Text="{Binding Piece.Symbol}"
                                                                                             HorizontalAlignment="Center"
                                                                                             VerticalAlignment="Center"/>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ContentControl.Style>
                                                        </ContentControl>
                                                    </Viewbox>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>

                            <!-- ЦИФРЫ СЛЕВА (8-1) -->
                            <StackPanel Grid.Row="1" Grid.Column="0" 
                                       Orientation="Vertical" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock Text="8" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="7" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="6" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="5" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="4" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="3" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="2" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="1" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
                            </StackPanel>

                            <!-- ЦИФРЫ СПРАВА (8-1) -->
                            <StackPanel Grid.Row="1" Grid.Column="2" 
                                       Orientation="Vertical" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock Text="8" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="7" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="6" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="5" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="4" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="3" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="2" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,0,62"/>
                                <TextBlock Text="1" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
                            </StackPanel>

                            <!-- БУКВЫ СВЕРХУ (a-h) -->
                            <StackPanel Grid.Row="0" Grid.Column="1" 
                                       Orientation="Horizontal" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock Text="a" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="30,0,62,0"/>
                                <TextBlock Text="b" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="c" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="d" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="e" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="f" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="g" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="h" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
                            </StackPanel>

                            <!-- БУКВЫ СНИЗУ (a-h) -->
                            <StackPanel Grid.Row="2" Grid.Column="1" 
                                       Orientation="Horizontal" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock Text="a" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="30,0,62,0"/>
                                <TextBlock Text="b" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="c" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="d" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="e" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="f" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="g" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial" Margin="0,0,62,0"/>
                                <TextBlock Text="h" Foreground="#E8E8E8" FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Viewbox>

                <!-- ПАНЕЛЬ ТРЕНИРОВКИ -->
                <Border Grid.Column="1" 
                       Background="#F8F9FA" 
                       Margin="10" 
                       CornerRadius="12"
                       BorderBrush="#DEE2E6"
                       BorderThickness="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="15">

                            <!-- ТЕКУЩАЯ ПОЗИЦИЯ -->
                            <Border Style="{StaticResource InfoCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🎯 ТЕКУЩАЯ ПОЗИЦИЯ" 
                                              FontSize="13" 
                                              Foreground="#BDC3C7"
                                              FontWeight="Bold"/>
                                    <TextBlock x:Name="PositionTitleText" 
                                              Text="ПОЗИЦИЯ #1" 
                                              FontSize="22" 
                                              FontWeight="Bold"
                                              Foreground="#FFD700"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- ЗАДАНИЕ -->
                            <Border Style="{StaticResource InfoCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="📝 ЗАДАНИЕ" 
                                              FontSize="13" 
                                              Foreground="#BDC3C7"
                                              FontWeight="Bold"
                                              Margin="0,0,0,8"/>
                                    <TextBlock x:Name="PositionTaskText" 
                                              Text="Найдите лучший ход в данной позиции. Используйте тактические приемы для получения преимущества."
                                              FontSize="14"
                                              Foreground="White"
                                              TextWrapping="Wrap"
                                              TextAlignment="Left"
                                              LineHeight="20"/>
                                </StackPanel>
                            </Border>

                            <!-- ПРОГРЕСС ТРЕНИРОВКИ -->
                            <Border Style="{StaticResource InfoCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="📈 ПРОГРЕСС ТРЕНИРОВКИ" 
                                              FontSize="13" 
                                              Foreground="#BDC3C7"
                                              FontWeight="Bold"
                                              Margin="0,0,0,12"/>

                                    <ProgressBar x:Name="TrainingProgressBar" 
                                                Value="0"
                                                Maximum="100"
                                                Style="{StaticResource ProgressBarStyle}"/>

                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="0%" 
                                                  FontSize="11"
                                                  Foreground="#BDC3C7"/>
                                        <TextBlock Text="100%" 
                                                  FontSize="11"
                                                  Foreground="#BDC3C7"
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- РЕШЕНИЕ -->
                            <Border Style="{StaticResource InfoCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🧩 РЕШЕНИЕ" 
                                              FontSize="13" 
                                              Foreground="#BDC3C7"
                                              FontWeight="Bold"
                                              Margin="0,0,0,8"/>

                                    <Border Height="140" 
                                           CornerRadius="8"
                                           Background="#2C3E50"
                                           BorderBrush="#4A6572"
                                           BorderThickness="1">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ListBox x:Name="SolutionMovesList" 
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontFamily="Consolas"
                                                    Foreground="White"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="10,6"
                                                               Background="Transparent">
                                                            <TextBlock Text="{Binding}" 
                                                                      FontSize="12"
                                                                      Foreground="#ECF0F1"
                                                                      TextWrapping="Wrap"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- КНОПКИ УПРАВЛЕНИЯ -->
                            <StackPanel Margin="0,0,0,15">
                                <Button x:Name="NextButton" 
                                       Content="➡️ СЛЕДУЮЩАЯ ПОЗИЦИЯ" 
                                       Height="50"
                                       Style="{StaticResource ControlButtonStyle}"
                                       Background="#27AE60"
                                       FontSize="14"
                                       Click="NextButton_Click"
                                       Margin="0,0,0,12"/>

                                <Button x:Name="ShowSolutionButton" 
                                       Content="👁️ ПОКАЗАТЬ РЕШЕНИЕ" 
                                       Height="45"
                                       Style="{StaticResource ControlButtonStyle}"
                                       Background="#3498DB"
                                       FontSize="13"
                                       Click="ShowSolutionButton_Click"/>
                            </StackPanel>

                            <!-- ПОДСКАЗКА -->
                            <Border Style="{StaticResource InfoCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="💡 ПОДСКАЗКА" 
                                              FontSize="13" 
                                              Foreground="#BDC3C7"
                                              FontWeight="Bold"
                                              Margin="0,0,0,8"/>

                                    <TextBlock x:Name="HintText" 
                                              Text="Нажмите на белую фигуру, чтобы увидеть возможные ходы. Обратите внимание на открытые линии и слабые поля."
                                              FontSize="13"
                                              Foreground="#FFD700"
                                              TextWrapping="Wrap"
                                              LineHeight="18"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- СТАТУС БАР -->
            <Border Grid.Row="2" 
                   Background="#34495E" 
                   Padding="15"
                   BorderBrush="#4A6572"
                   BorderThickness="0,1,0,0"
                   CornerRadius="0,0,10,10">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Border Width="28" 
                           Height="28" 
                           CornerRadius="14"
                           Background="#27AE60"
                           Margin="0,0,12,0">
                        <TextBlock Text="●" 
                                  FontSize="10"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                    </Border>
                    <TextBlock x:Name="StatusText" 
                              Text="Тренировка начата. Найдите лучший ход на доске." 
                              Foreground="#BDC3C7" 
                              FontSize="12"
                              VerticalAlignment="Center"
                              FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>