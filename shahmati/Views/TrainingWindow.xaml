<Window x:Class="shahmati.Views.TrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:shahmati.Views"
        Title="🔥 ШАХМАТНЫЙ ТРЕНАЖЕР" 
        Height="850" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        BorderThickness="1"
        BorderBrush="#FF6A00"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- ГРАДИЕНТЫ И ЦВЕТА -->
        <LinearGradientBrush x:Key="MainGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0C0C0C" Offset="0"/>
            <GradientStop Color="#1A1A1A" Offset="0.5"/>
            <GradientStop Color="#0C0C0C" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FFD700" Offset="0"/>
            <GradientStop Color="#FFA500" Offset="0.5"/>
            <GradientStop Color="#FFD700" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF416C" Offset="0"/>
            <GradientStop Color="#FF4B2B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#2193b0" Offset="0"/>
            <GradientStop Color="#6dd5ed" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#11998e" Offset="0"/>
            <GradientStop Color="#38ef7d" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#8A2BE2" Offset="0"/>
            <GradientStop Color="#DA70D6" Offset="1"/>
        </LinearGradientBrush>

        <!-- СТИЛИ КНОПОК -->
        <Style x:Key="GlowButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="15" 
                                                  Opacity="0.7"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ ДЛЯ КЛЕТОК ДОСКИ -->
        <Style x:Key="BoardCellStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F0D9B5" Offset="0"/>
                        <GradientStop Color="#B58863" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#90EE90" Offset="0"/>
                                <GradientStop Color="#32CD32" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#00FF00"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPossibleMove}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#60EE9060" Offset="0"/>
                                <GradientStop Color="#2000FF00" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#00FF00"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- СТИЛЬ ДЛЯ КАРТОЧЕК -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2C3E50" Offset="0"/>
                        <GradientStop Color="#1C2833" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ ДЛЯ СТАТИСТИКИ -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A1A1A" Offset="0"/>
                        <GradientStop Color="#0D0D0D" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="2" Color="#FF6A00"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource MainGradient}">
        <!-- ГЛАВНАЯ ОБЛАСТЬ -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ШАПКА С АНИМАЦИЕЙ -->
            <Border Grid.Row="0" 
                    Background="Transparent" 
                    Padding="15"
                    BorderBrush="#FF6A00"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ЛОГО И НАЗВАНИЕ -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <Border Width="40" 
                                Height="40" 
                                CornerRadius="10"
                                Background="{StaticResource GoldGradient}"
                                Margin="0,0,15,0">
                            <TextBlock Text="♔" 
                                      FontSize="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>
                        </Border>
                        <StackPanel>
                            <TextBlock x:Name="TrainingNameText" 
                                      Text="ШАХМАТНЫЙ ТРЕНАЖЕР" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      FontFamily="Segoe UI Black"/>
                            <TextBlock x:Name="TrainingDescriptionText" 
                                      Text="Развивайте навыки, побеждайте!" 
                                      Foreground="#FF6A00" 
                                      FontSize="11"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- СТАТИСТИКА В РЕАЛЬНОМ ВРЕМЕНИ -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="0,0,20,0">

                        <!-- ТАЙМЕР -->
                        <Border Style="{StaticResource StatCardStyle}" 
                                Margin="0,0,15,0" 
                                Width="120">
                            <StackPanel>
                                <TextBlock Text="⏱️ ВРЕМЯ" 
                                          FontSize="10" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center"
                                          FontWeight="Bold"/>
                                <TextBlock x:Name="TimerText" 
                                          Text="00:00" 
                                          Foreground="#00FF00" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

                        <!-- ОЧКИ -->
                        <Border Style="{StaticResource StatCardStyle}" 
                                Margin="0,0,15,0" 
                                Width="120"
                                BorderBrush="#00FF00">
                            <StackPanel>
                                <TextBlock Text="🏆 ОЧКИ" 
                                          FontSize="10" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center"
                                          FontWeight="Bold"/>
                                <TextBlock x:Name="ScoreText" 
                                          Text="0" 
                                          Foreground="#00FF00" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

                        <!-- ОШИБКИ -->
                        <Border Style="{StaticResource StatCardStyle}" 
                                Margin="0,0,15,0" 
                                Width="120"
                                BorderBrush="#FF4444">
                            <StackPanel>
                                <TextBlock Text="💀 ОШИБКИ" 
                                          FontSize="10" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center"
                                          FontWeight="Bold"/>
                                <TextBlock x:Name="MistakesText" 
                                          Text="0" 
                                          Foreground="#FF4444" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

                        <!-- ПРОГРЕСС -->
                        <Border Style="{StaticResource StatCardStyle}" 
                                Width="120"
                                BorderBrush="#FF6A00">
                            <StackPanel>
                                <TextBlock Text="📊 ПРОГРЕСС" 
                                          FontSize="10" 
                                          Foreground="#888" 
                                          HorizontalAlignment="Center"
                                          FontWeight="Bold"/>
                                <TextBlock x:Name="ProgressText" 
                                          Text="0/10" 
                                          Foreground="#FF6A00" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- КНОПКИ УПРАВЛЕНИЯ -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Button x:Name="HintButton" 
                               Content="💡 ПОДСКАЗКА" 
                               Style="{StaticResource GlowButtonStyle}"
                               Background="{StaticResource BlueGradient}"
                               Padding="20,10"
                               Margin="0,0,10,0"
                               FontSize="12"
                               Click="HintButton_Click"
                               Tag="#2193b0"/>

                        <Button x:Name="CompleteButton" 
                               Content="🏁 ЗАВЕРШИТЬ" 
                               Style="{StaticResource GlowButtonStyle}"
                               Background="{StaticResource RedGradient}"
                               Padding="20,10"
                               FontSize="12"
                               Click="CompleteButton_Click"
                               Tag="#FF416C"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ОСНОВНОЙ КОНТЕНТ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- ШАХМАТНАЯ ДОСКА С ЭФФЕКТАМИ -->
                <Border Grid.Column="0" 
                       Margin="30" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       CornerRadius="15"
                       Background="#111"
                       BorderBrush="#FF6A00"
                       BorderThickness="2"
                       Padding="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                         Opacity="0.3" 
                                         ShadowDepth="5"
                                         Color="#FF6A00"/>
                    </Border.Effect>

                    <Viewbox Stretch="Uniform">
                        <Grid Width="560" Height="560">
                            <!-- ФОН ДОСКИ С ТЕКСТУРОЙ -->
                            <Border Background="#111" 
                                   CornerRadius="10" 
                                   BorderBrush="#222" 
                                   BorderThickness="2" 
                                   Padding="20">

                                <!-- ОСНОВНАЯ ДОСКА -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="480"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="480"/>
                                        <RowDefinition Height="40"/>
                                    </Grid.RowDefinitions>

                                    <!-- САМА ДОСКА С КЛЕТКАМИ -->
                                    <Border Grid.Row="1" 
                                           Grid.Column="1" 
                                           Background="#222"
                                           CornerRadius="8"
                                           BorderBrush="#333"
                                           BorderThickness="1">
                                        <ItemsControl ItemsSource="{Binding Board.CellsFlat}"
                                                      x:Name="ChessBoard">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="8" Columns="8"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource BoardCellStyle}">
                                                        <Border.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick" 
                                                                         Command="{Binding DataContext.CellClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                         CommandParameter="{Binding Position}"/>
                                                        </Border.InputBindings>

                                                        <!-- ФИГУРА С ЭФФЕКТОМ -->
                                                        <Viewbox Stretch="Uniform" Width="45" Height="45">
                                                            <Image Source="{Binding Piece.ImagePath}" 
                                                                   RenderOptions.BitmapScalingMode="HighQuality">
                                                                <Image.Effect>
                                                                    <DropShadowEffect ShadowDepth="2" 
                                                                                     BlurRadius="5" 
                                                                                     Opacity="0.5"/>
                                                                </Image.Effect>
                                                            </Image>
                                                        </Viewbox>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- ЦИФРЫ СЛЕВА -->
                                    <StackPanel Grid.Row="1" 
                                               Orientation="Vertical" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="8" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="7" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="6" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="5" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="4" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="3" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="2" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="1" Foreground="#FFD700" FontWeight="Bold" FontSize="18"/>
                                    </StackPanel>

                                    <!-- ЦИФРЫ СПРАВА -->
                                    <StackPanel Grid.Row="1" 
                                               Grid.Column="2" 
                                               Orientation="Vertical" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="8" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="7" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="6" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="5" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="4" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="3" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="2" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,0,60"/>
                                        <TextBlock Text="1" Foreground="#FFD700" FontWeight="Bold" FontSize="18"/>
                                    </StackPanel>

                                    <!-- БУКВЫ СВЕРХУ -->
                                    <StackPanel Grid.Row="0" 
                                               Grid.Column="1" 
                                               Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="a" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="30,0,60,0"/>
                                        <TextBlock Text="b" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="c" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="d" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="e" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="f" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="g" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="h" Foreground="#FFD700" FontWeight="Bold" FontSize="18"/>
                                    </StackPanel>

                                    <!-- БУКВЫ СНИЗУ -->
                                    <StackPanel Grid.Row="2" 
                                               Grid.Column="1" 
                                               Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <TextBlock Text="a" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="30,0,60,0"/>
                                        <TextBlock Text="b" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="c" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="d" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="e" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="f" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="g" Foreground="#FFD700" FontWeight="Bold" FontSize="18" Margin="0,0,60,0"/>
                                        <TextBlock Text="h" Foreground="#FFD700" FontWeight="Bold" FontSize="18"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Viewbox>
                </Border>

                <!-- ПАНЕЛЬ ТРЕНИРОВКИ -->
                <Border Grid.Column="1" 
                       Margin="0,20,20,20" 
                       CornerRadius="15"
                       Background="#111"
                       BorderBrush="#333"
                       BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="5"/>
                    </Border.Effect>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="20">

                            <!-- ЗАГОЛОВОК ПОЗИЦИИ -->
                            <Border Style="{StaticResource CardStyle}"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="🎯 ТЕКУЩАЯ ПОЗИЦИЯ" 
                                              FontSize="12" 
                                              Foreground="#888"
                                              FontWeight="Bold"/>
                                    <TextBlock x:Name="PositionTitleText" 
                                              Text="ПОЗИЦИЯ #1" 
                                              FontSize="22" 
                                              FontWeight="Bold"
                                              Foreground="#FFD700"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- ЗАДАНИЕ -->
                            <Border Style="{StaticResource CardStyle}"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="📝 ЗАДАНИЕ" 
                                              FontSize="12" 
                                              Foreground="#888"
                                              FontWeight="Bold"
                                              Margin="0,0,0,10"/>
                                    <TextBlock x:Name="PositionTaskText" 
                                              Text="Найдите лучший ход в данной позиции..."
                                              FontSize="14"
                                              Foreground="White"
                                              TextWrapping="Wrap"
                                              TextAlignment="Left"/>
                                </StackPanel>
                            </Border>

                            <!-- ПРОГРЕСС-БАР -->
                            <Border Style="{StaticResource CardStyle}"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="📈 ПРОГРЕСС ТРЕНИРОВКИ" 
                                              FontSize="12" 
                                              Foreground="#888"
                                              FontWeight="Bold"
                                              Margin="0,0,0,10"/>

                                    <!-- ПРОГРЕСС БАР -->
                                    <Border Height="20" 
                                            CornerRadius="10" 
                                            Background="#222"
                                            BorderBrush="#333"
                                            BorderThickness="1">
                                        <Border x:Name="ProgressFill" 
                                                HorizontalAlignment="Left"
                                                Width="0" 
                                                CornerRadius="9"
                                                Background="{StaticResource GreenGradient}">
                                            <Border.Effect>
                                                <BlurEffect Radius="2"/>
                                            </Border.Effect>
                                        </Border>
                                    </Border>

                                    <ProgressBar x:Name="TrainingProgressBar" 
                                                Height="20" 
                                                Maximum="100" 
                                                Value="0"
                                                Background="Transparent"
                                                Foreground="Transparent"
                                                Margin="0,-20,0,0"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="0%" 
                                                  FontSize="11"
                                                  Foreground="#666"/>

                                        

                                        <TextBlock Text="100%" 
                                                  FontSize="11"
                                                  Foreground="#666"
                                                  Grid.Column="2"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- РЕШЕНИЕ -->
                            <Border Style="{StaticResource CardStyle}"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="🧩 РЕШЕНИЕ" 
                                              FontSize="12" 
                                              Foreground="#888"
                                              FontWeight="Bold"
                                              Margin="0,0,0,10"/>

                                    <Border Height="150" 
                                            CornerRadius="8"
                                            Background="#1A1A1A"
                                            BorderBrush="#333"
                                            BorderThickness="1">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ListBox x:Name="SolutionMovesList" 
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontFamily="Consolas"
                                                    Foreground="White">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="10,5"
                                                               Background="Transparent">
                                                            <TextBlock Text="{Binding}" 
                                                                      FontSize="12"
                                                                      Foreground="#DDD"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border Background="Transparent"
                                                                            Padding="2">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2C3E50"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="#FF6A00"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- КНОПКИ УПРАВЛЕНИЯ -->
                            <StackPanel Margin="0,0,0,20">
                                <Button x:Name="NextButton" 
                                       Content="➡️ СЛЕДУЮЩАЯ ПОЗИЦИЯ" 
                                       Height="50"
                                       Style="{StaticResource GlowButtonStyle}"
                                       Background="{StaticResource PurpleGradient}"
                                       FontSize="14"
                                       Click="NextButton_Click"
                                       Margin="0,0,0,10"
                                       Tag="#8A2BE2"/>

                                <Button x:Name="ShowSolutionButton" 
                                       Content="👁️ ПОКАЗАТЬ РЕШЕНИЕ" 
                                       Height="45"
                                       Style="{StaticResource GlowButtonStyle}"
                                       Background="{StaticResource BlueGradient}"
                                       FontSize="13"
                                       Click="ShowSolutionButton_Click"
                                       Tag="#2193b0"/>
                            </StackPanel>

                            <!-- ПОДСКАЗКА -->
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="💡 ПОДСКАЗКА" 
                                              FontSize="12" 
                                              Foreground="#888"
                                              FontWeight="Bold"
                                              Margin="0,0,0,10"/>

                                    <TextBlock x:Name="HintText" 
                                              Text="Наведитесь на фигуру и выберите возможный ход..."
                                              FontSize="12"
                                              Foreground="#FFD700"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- СТАТУС БАР -->
            <Border Grid.Row="2" 
                   Background="#111" 
                   Padding="15"
                   BorderBrush="#222"
                   BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- СТАТУС -->
                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Border Width="30" 
                               Height="30" 
                               CornerRadius="15"
                               Background="#00FF00"
                               Margin="0,0,10,0">
                            <TextBlock Text="●" 
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>
                        </Border>
                        <TextBlock x:Name="StatusText" 
                                  Text="Тренировка начата. Найдите лучший ход на доске." 
                                  Foreground="#00FF00" 
                                  FontSize="11"
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- ИНФОРМАЦИЯ О ТРЕНИРОВКЕ -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <TextBlock Text="♔" 
                                  Foreground="#FFD700" 
                                  FontSize="14"
                                  Margin="0,0,5,0"/>
                        <TextBlock Text="ШАХМАТНЫЙ ТРЕНАЖЕР v1.0" 
                                  Foreground="#888" 
                                  FontSize="10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>