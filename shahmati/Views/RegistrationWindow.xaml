<Window x:Class="shahmati.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="685" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordFieldStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Стиль для кнопки регистрации -->
        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="♛" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Создание аккаунта" 
                              FontSize="24" FontWeight="Bold" 
                              Foreground="White" HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Форма регистрации -->
                <Border Background="#FFFFFF" CornerRadius="10" Padding="30">
                    <StackPanel>
                        <TextBlock Text="Логин" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 Style="{StaticResource InputFieldStyle}"
                                 TextChanged="UsernameTextBox_TextChanged"
                                 KeyDown="UsernameTextBox_KeyDown" Height="39"/>
                        <TextBlock x:Name="UsernameError" 
                                   Foreground="Red" 
                                   FontSize="11" 
                                   Margin="0,2,0,0"
                                   Visibility="Collapsed"/>

                        <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#333"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Style="{StaticResource PasswordFieldStyle}"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     KeyDown="PasswordBox_KeyDown" Height="41"/>
                        <TextBlock x:Name="PasswordError" 
                                   Foreground="Red" 
                                   FontSize="11" 
                                   Margin="0,2,0,0"
                                   Visibility="Collapsed"/>

                        <TextBlock Text="Повторите пароль" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#333"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" 
                                     Style="{StaticResource PasswordFieldStyle}"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                     KeyDown="ConfirmPasswordBox_KeyDown" Height="44"/>
                        <TextBlock x:Name="ConfirmPasswordError" 
                                   Foreground="Red" 
                                   FontSize="11" 
                                   Margin="0,2,0,0"
                                   Visibility="Collapsed"/>

                        <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#333"/>
                        <TextBox x:Name="EmailTextBox" 
                                 Style="{StaticResource InputFieldStyle}"
                                 TextChanged="EmailTextBox_TextChanged"
                                 KeyDown="EmailTextBox_KeyDown" Height="42"/>
                        <TextBlock x:Name="EmailError" 
                                   Foreground="Red" 
                                   FontSize="11" 
                                   Margin="0,2,0,0"
                                   Visibility="Collapsed"/>

                        <Button x:Name="RegisterButton" 
                                Content="Создать аккаунт" 
                                Style="{StaticResource RegisterButtonStyle}"
                                Margin="0,25,0,10" 
                                IsEnabled="False"
                                 Click="RegisterButton_Click"/>

                        <Button Content="Назад к входу" 
                               Height="35" 
                               Background="Transparent" 
                               Foreground="#666" 
                               FontSize="12" 
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="BackButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>