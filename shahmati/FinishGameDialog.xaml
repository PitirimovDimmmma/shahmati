<Window x:Class="shahmati.FinishGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Завершение игры" 
        Height="250" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Выберите результат игры:" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center">
            <RadioButton x:Name="WhiteWinRadio" 
                        Content="🏆 Победа белых" 
                        GroupName="Result" 
                        Margin="0,5"
                        FontSize="14">
                <RadioButton.Tag>White</RadioButton.Tag>
            </RadioButton>

            <RadioButton x:Name="BlackWinRadio" 
                        Content="🏆 Победа черных" 
                        GroupName="Result" 
                        Margin="0,5"
                        FontSize="14">
                <RadioButton.Tag>Black</RadioButton.Tag>
            </RadioButton>

            <RadioButton x:Name="DrawRadio" 
                        Content="🤝 Ничья" 
                        GroupName="Result" 
                        Margin="0,5"
                        FontSize="14"
                        IsChecked="True">
                <RadioButton.Tag>Draw</RadioButton.Tag>
            </RadioButton>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>

            <Button x:Name="OKButton" 
                    Content="Завершить" 
                    Width="100" 
                    Height="30"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>